<div class = "list-banner d-flex align-items-center justify-content-between">
  <h1 id="banner-title">
    Movie Lists
  </h1>
</div>
<ul class="flex-grid list-unstyled">
<% @lists.each do |l| %>
  <div class="col">
    <li class="list-item">
      <div class="link">
        <%= link_to l.name.capitalize, list_path(l) %>
      </div>
      <div class="delete-list">
        <%= link_to "❌", list_path(l), method: :delete, data: {confirm: "are you sure"} %>
      </div>
    </li>
  </div>
<% end %>
</ul>
