<div class = "list-banner d-flex align-items-center justify-content-between">
  <h1 id="banner-title">
    Movie Lists
  </h1>
  <div class="add-list mt-auto p-2">
    <%= link_to 'add new list', new_list_path, class: "btn btn-info"%>
  </div>
</div>
<ul>
<% @lists.each do |l| %>
  <li class="card" ><%= link_to l.name.capitalize, list_path(l) %></li>
  <%= link_to "❌", list_path(l), method: :delete, data: {confirm: "are you sure"} %>
<% end %>
</ul>
